{
  "name": "orions-gate",
  "version": "2.0.0-alpha.0",
  "private": true,
  "author": {
    "name": "Orion's Gate Team",
    "email": "team@orionsgate.dev"
  },
  "description": "Orion's Gate â€” YouTube client with DPI bypass, ad blocking, and privacy features",
  "main": "dist/main.js",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"npm:dev:renderer\" \"npm:dev:ts\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:ts": "tsup --config tsup.config.ts --watch",
    "dev:electron": "wait-on dist/main.js && electronmon --exec \"npx electron dist/main.js\"",
    "build": "rimraf dist && tsup --config tsup.config.ts --env.NODE_ENV production && vite build --config vite.renderer.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "echo \"TODO: add lint\"",
    "start": "npx electron dist/main.js",
    "make:win": "npm run build && electron-builder --win nsis --config electron-builder.yml",
    "make:deb": "npm run build && electron-builder --linux deb --config electron-builder.yml",
    "make:rpm": "npm run build && electron-builder --linux rpm --config electron-builder.yml",
    "make:appimage": "npm run build && electron-builder --linux AppImage --config electron-builder.yml",
    "generate-icons": "node scripts/generate-icons.js",
    "validate-icons": "node scripts/validate-icons.js",
    "playwright:install": "npx playwright install --with-deps chromium",
    "test:smoke": "npm run build && npx playwright test"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "2.13.4",
    "clsx": "^2.1.1",
    "cross-fetch": "4.1.0",
    "electron-log": "^5.1.4",
    "electron-store": "^11.0.2",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^13.5.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "40.0.0",
    "electron-builder": "^24.11.0",
    "electronmon": "^2.0.2",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.1",
    "typescript": "^5.4.2",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
